@using GuitarManagement.BL.Domain
@using GuitarManagement.UI.MVC
@model GuitarManagement.BL.Domain.Store

@{
    ViewBag.Title = "Store details";
    Layout = "_Layout";
}

<h2>Store Details</h2>

<section class="mt-3 storeDetails" data-id="@Model.Id">
    <div class="row mb-3">
        <span class="col-sm-2 fw-bold">Name</span>
        <span class="col-sm-10">@Model.Name</span>
    </div>
    <div class="row mb-3">
        <span class="col-sm-2 fw-bold">Address</span>
        <span class="col-sm-10">@Model.Address</span>
    </div>
    <div class="row mb-3">
        <span class="col-sm-2 fw-bold">Location</span>
        <span class="col-sm-10">@Model.Location</span>
    </div>
</section>
<section class="mt-3 modelsInStoreContainer">
    <h2>Guitarmodels</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Amount in stock</th>
            <th>Name</th>
            <th>Amount of strings</th>
            <th>Price</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="table-body">
        </tbody>
    </table>
</section>
    <section class="mt-3">
        <h2>Add guitarmodel</h2>
        <form class="addGuitarButtonForm">
            <label for="guitarModelSelect">Guitarmodel</label>
            <select id="guitarModelSelect">
            </select>
            <label for="amountInput">Amount</label>
            <input type="number" id="amountInput" min="0" max="9999"/>
            <button class="addGuitarButton">Add guitarmodel to store</button>
        </form>
    </section>
@section scripts{
    <script src="@Url.Content("~/js/store/index.js")" type="module"></script>
    }